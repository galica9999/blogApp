<%- include('partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label for="">Title</label>
            <input type="text" placeholder="title" name="blog[title]">
        </div>
        <div class="field">
            <label for="">Image URL</label>
            <input type="text" placeholder="image url" name="blog[image]">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <input type="submit" class="ui basic button violet">
    </form>
</div>
<%- include('partials/footer') %>