<%- include('partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%>></div>
    <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label for="">Title</label>
            <input type="text" placeholder="" name="blog[title]" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label for="">Image URL</label>
            <input type="text" placeholder="" name="blog[image]" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]"><%=blog.body%></textarea>
        </div>
        <input type="submit" class="ui basic button violet">
    </form>
</div>
<%- include('partials/footer') %>